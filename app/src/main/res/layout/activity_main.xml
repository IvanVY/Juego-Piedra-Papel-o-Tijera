<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Resultado"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/seleccionComputadora"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvResultado"
        android:layout_centerHorizontal="true"
        android:src="@drawable/piedra_papel_tijeras"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tvPuntuacionJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador: 0"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvPuntuacionComputadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computadora: 0"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/llBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPiedra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Piedra" />

        <Button
            android:id="@+id/btnPapel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Papel" />

        <Button
            android:id="@+id/btnTijera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tijera" />

    </LinearLayout>
</RelativeLayout>